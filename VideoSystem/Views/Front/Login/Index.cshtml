
@{Layout = null;}
<!DOCTYPE html>
<html>
    <head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width" />
     <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
     <link href="~/Content/app.css" rel="stylesheet" />
     <script src="~/Scripts/jquery-1.8.2.min.js"></script>
     <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
     <script src="~/Scripts/Utils.js"></script>
     <script src="~/Scripts/JQuery.md5.js"></script>
     <script src="~/Scripts/fingerprint.js"></script>
     <link type="text/css" rel="stylesheet" href="~/Content/pagecss/login.css" />
     @*<script type="text/javascript" src="http://open.51094.com/user/myscript/158562cdb943a4.html"></script>*@
     <title>用户登录</title>
     </head>

    <body>
        <div class="navbar navbar-default head_footer" style="margin-bottom:0;padding:0" >
            <div >
               <img src="~/Image/logo.png"/ id="top_img">
                <div style="text-align: center;">
                    <p id="app_head"><b>古驿平安串珠视频系统</b></p>
                </div>
            </div>
        </div>

        

        <div id="back_behind" style="margin-top:30px;padding:10px;">
            <div class="container" id="back_front">
                <div class="row vid_loac">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-md-offset-3" id="div_login">
                        <form class="form-horizontal" role="form" method="post" id="userLoginForm">
                            <table id="login_table" style="border-spacing: 20px; border-collapse: separate; width: 100%">
                                <caption style="text-align: center; padding: 0">
                                    <h3 style="margin: 2px">用户登录</h3>
                                </caption>
                                <tr style="margin-top: 0">
                                    <td colspan="6">
                                         <input type="text" placeholder="手机号" class="form-control" id="phone" name="phone">
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <table style="width:100%;">
                                            <tr>
                                                <td >
                                                    <input type="password" placeholder="验证码" class="form-control" id="code" name="code">
                                                </td>
                                                <td >
                                                    <button type="button" class="btn btn-success submit_btn" onclick="getCode();">获取验证码</button>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>

                                <tr>
                                    <td style="text-align:center">
                                        <p id="logininfo" style="color: red;">@TempData["info"]</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <button type="button" class="btn btn-success submit_btn" id="submit_btn" onclick="login()">登录</button>
                                    </td>
                                    @*<td colspan="3" style="width: 50%">
                                        <a class="btn btn-warning"  id="regist_btn" href="/Login/RegistPage">没有账户，去注册 </a>
                                    </td>*@
                                </tr>
                                @*<tr>
                                    <td colspan="6" style="width: 100%;text-align:center">
                                        <p style="color:black;">第三方登陆</p>
                                        <span id="hzy_fast_login"></span>
                                    </td>
                                </tr>*@
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
<script src="~/Scripts/customjs/userLogin.js"></script>
