@{
    ViewBag.Title = "产品展示";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VideoSystem.Models.Product[]
@using VideoSystem.Models;

<link href="@Url.Content("~/content/pagecss/main.css")" rel="stylesheet" type="text/css">
<link href="@Url.Content("~/content/pagecss/product.css")" rel="stylesheet" type="text/css">

@Html.Partial("HomePartialView")

<div class="list">
			<h3 class="title1" style="font-size:30px">近期热销产品展示</h3>
            <hr style="border-bottom: 1px solid #f15f43;" />
			<div class="row">
                @foreach(Product p in Model)
                {
                    <div class="products">
						    <img src="@p.ProductImg"/>
						    <div class="mask">
							    <h4 style="font-style:normal; line-height:2">
                                    @p.ProductName  &nbsp;
                                    ¥@p.ProductPrice  元&nbsp;
                                    <a href="@p.ProductUrl">购买</a>
							    </h4>
						    </div>
                    </div>
                }
			</div>				
		</div>